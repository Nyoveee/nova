    "depthTestingMethod": "DepthTest",
    "cullingConfig": "Enable",
    "uniforms": {
        "UVTiling": "vec2",
        "roughness": "NormalizedFloat",
        "UVOffset": "vec2",
        "emissiveStrength": "float",
        "toUsePackedMap": "bool",
        "toUseNormalMap": "bool",
        "toUseEmissiveMap": "bool",
        "metallic": "NormalizedFloat",
        "occulusion": "NormalizedFloat",
        "albedoMap": "sampler2D",
        "colorTint": "Color",
        "packedMap": "sampler2D",
        "normalMap": "sampler2D",
        "emissiveMap": "sampler2D"
